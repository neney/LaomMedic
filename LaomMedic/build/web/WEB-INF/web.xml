<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Admin-zone</display-name>
        <web-resource-collection>
            <web-resource-name>Admin-Zone</web-resource-name>
            <description>Zona de Administradores</description>
            <url-pattern>/faces/pages/administrador/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>webAdmin</role-name>
            <role-name>webRoot</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Recep-zone</display-name>
        <web-resource-collection>
            <web-resource-name>recep-zone</web-resource-name>
            <description/>
            <url-pattern>/faces/pages/recepcionista/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>webRoot</role-name>
            <role-name>webRecep</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Fisio-zone</display-name>
        <web-resource-collection>
            <web-resource-name>fisio-zone</web-resource-name>
            <description/>
            <url-pattern>/faces/pages/fisioterapeuta/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>webRoot</role-name>
            <role-name>webFisio</role-name>
            <role-name>webAdmin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>User-zone</display-name>
        <web-resource-collection>
            <web-resource-name>user-zone</web-resource-name>
            <description/>
            <url-pattern>/faces/pages/usuario/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>webUsers</role-name>
            <role-name>webRoot</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Root-zone</display-name>
        <web-resource-collection>
            <web-resource-name>root-zone</web-resource-name>
            <description/>
            <url-pattern>/faces/pages/root/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>webRoot</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>LaomMedic-realm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Zona de SuperUsuario</description>
        <role-name>webRoot</role-name>
    </security-role>
    <security-role>
        <description>Zona de Administradores</description>
        <role-name>webAdmin</role-name>
    </security-role>
    <security-role>
        <description>Zona de Fisioterapeutas</description>
        <role-name>webFisio</role-name>
    </security-role>
    <security-role>
        <description>Zona de Reciopnistas</description>
        <role-name>webRecep</role-name>
    </security-role>
    <security-role>
        <description>Zona de Usuarios</description>
        <role-name>webUsers</role-name>
    </security-role>
</web-app>
